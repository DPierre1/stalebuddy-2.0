<style>
   #LogBook {
      background-color: transparent;
   }
   h1 {
      color: white;
   }

</style>
<script src="https://use.fontawesome.com/1b82322039.js"></script>
<div>
   <h1>LOGBOOK</h1>
</div>
<table id="LogBook" class="table table-inverse">
   <thead id="LogBookHead">
      <tr>
         <th>Product</th>
         <th>Expiration Date</th>
         <th>Comments</th>
         <th>Price</th>
      </tr>
   </thead>
   <tbody id="LogBookBody">
      <% grocery_list.forEach(function(item) { %>
         <tr class="item">
            <td>
               <%= item.product %>
            </td>
            <td>
               <%= item.expiration %>
            </td>
            <td>
               <%= item.comments %>
            </td>
            <td>$
               <%= item.price %>
            </td>
            <td><a href="#" data-id="@item.Id" class="linkdeleteLogBook"><i class="fa fa-trash-o"></i></a></td>
         </tr>
         <% }); %>
   </tbody>
</table>

<script>
   $(document).ready(function() {
      var cost;

      cost = getCost();

      $("#LogBook").before("<div id='cost'><h4>Total Cost: <span id='number_price'>$" + cost.toFixed(2) + "<span></h4></div>");
      $("#cost").css("color", "white");
      $("#number_price").css("color", "#29a468");
   });

   function getCost() {
      var cost_holder = 0.00;
      $("#LogBookBody > tr").each(function() {
         var data = $(this).children().eq(3).html();
         var data_int = 0;
         data = data.substr(1);
         data_int = parseFloat(data);
         cost_holder = (cost_holder + data_int);
      });
      return cost_holder;
   }

</script>
