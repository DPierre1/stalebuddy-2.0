<style>
   #ItemTable {
      background-color: transparent;
   }
   h1 {
      color: white;
   }

   h1 span {
      color: #29a468;
   }
</style>
<script src="https://use.fontawesome.com/1b82322039.js"></script>
<table id="ItemTable" class="table table-inverse">
   <thead id="ItemTableHead">
      <tr>
         <th>Product</th>
         <th>Expiration Date</th>
         <th>Comments</th>
         <th>Price</th>
      </tr>
   </thead>
   <tbody id="ItemTableBody">
      <% grocery_list.forEach(function(item, index) { %>
         <tr class="item">
            <td><%= item.product %></td>
            <td><%= item.expiration %></td>
            <td><%= item.comments %></td>
            <td>$<%= item.price %></td>
            <td><a href="/delete/<%= index %>" data-id="@item.Id" class="linkdelete"><i class="fa fa-trash-o"></i></a></td>
         </tr>
      <% }); %>
   </tbody>
</table>
<h1>Total Price: <span>$<%= totalPrice %></span></h1>